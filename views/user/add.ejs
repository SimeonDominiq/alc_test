<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>    
 
<section class="inner-form">
<div class="container">
<div class="col-md-offset-2 col-md-8"> 
<% if (messages.error) { %>
    <div class="alert alert-danger alert-dismissable"><%- messages.error %></div>
<% } %>
 
<% if (messages.success) { %>
    <div class="alert alert-success alert-dismissable"><%- messages.success %></div>
<% } %>

<div class="form-div">
<form action="/users/add" method="post" name="form1">
<div class="row">

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">First Name</label>
        <div class="col-sm-9"><input type="text" name="firstname" class="form-control" value="<%= firstname %>" required></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Last Name</label>
        <div class="col-sm-9"><input type="text" name="lastname" class="form-control" value="<%= lastname %>" required></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Middle Name</label>
        <div class="col-sm-9"><input type="text" name="middlename" class="form-control" value="<%= middlename %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">D.O.B</label>
        <div class="col-sm-9"><input type="date" name="dob" class="form-control" value="<%= dob %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Age</label>
        <div class="col-sm-9"><input type="number" min="0" name="age" class="form-control" value="<%= age %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Email Address</label>
        <div class="col-sm-9"><input type="email" name="email" class="form-control" value="<%= email %>" required></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Phone Number</label>
        <div class="col-sm-9"><input type="number" name="phone" class="form-control" value="<%= phone %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Matric Number</label>
        <div class="col-sm-9"><input type="text" name="matric" class="form-control" value="<%= matric %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Course</label>
        <div class="col-sm-9"><input type="text" name="course" class="form-control" value="<%= course %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Department</label>
        <div class="col-sm-9"><input type="text" name="department" class="form-control" value="<%= department %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Level</label>
        <div class="col-sm-9"><input type="text" name="level" class="form-control" value="<%= level %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Address</label>
        <div class="col-sm-9">
            <textarea name="address" rows="5" class="form-control"><%= address %></textarea>
        </div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Parent Name</label>
        <div class="col-sm-9"><input type="text" name="parentname" class="form-control" value="<%= parentname %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Parent Phone Number</label>
        <div class="col-sm-9"><input type="number" name="parentphone" class="form-control" value="<%= parentphone %>"></div>
    </div>
    </div>

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3">Next of Kin</label>
        <div class="col-sm-9"><input type="text" name="nextofkin" class="form-control" value="<%= nextofkin %>"></div>
    </div>
    </div>                                                 

    <div class="col-sm-12">
    <div class="form-group">
        <label class="col-sm-3"></label>
        <div class="col-sm-9"><input type="submit" name="submit" class="btn btn-primary" value="Add New Record"></div>
    </div>
    </div>    

</div>
</form>
</div>

</div>
</div>
</section> 
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>